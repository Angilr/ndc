<%= Rouge::Themes::Gruvbox.mode(:light).render(scope: '.highlight') %>

div.highlight {
}

pre.highlight {
  position: relative;
  background-color: #f8f8f8 !important;
  margin: 39px -20px 50px;
  padding: 36px 60px 38px;
  font-size: 14px;
  line-height: 20px;
}
pre.highlight:before {
    content: "";
    position: absolute;
    left: -50vw;
    right: -50vw;
    top: 0;
    bottom: 0;
    z-index: -1;
    background: #f8f8f8;
}

#container:after {
    content: "";
    display: table;
    clear: both;
}
