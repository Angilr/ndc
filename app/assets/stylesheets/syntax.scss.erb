<%= Rouge::Themes::Base16.mode(:dark).render(scope: '.highlight') %>

div.highlight {
  padding: 10px 15px;
  border: 1px solid black;
  border-radius: 5px;
  overflow: auto;
  margin-bottom: 10px;
  -webkit-box-shadow: 3px 3px 5px 0px rgba(57, 57, 57, 0.5);
  -moz-box-shadow: 3px 3px 5px 0px rgba(57, 57, 57, 0.5);
  box-shadow: 3px 3px 5px 0px rgba(57, 57, 57, 0.5);
}
